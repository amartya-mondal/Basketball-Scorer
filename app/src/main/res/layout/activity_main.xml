<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DFDFD"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:id="@+id/a_name"
        android:textSize="24dp"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textColor="#030303"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="45dp"
/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#030303"
        android:text="Team B"
        android:id="@+id/b_name"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="12dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_score"
        android:textColor="#030303"
        android:text="0"
        android:layout_below="@id/a_name"
        android:layout_marginLeft="80dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_score"
        android:textColor="#030303"
        android:text="0"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@id/b_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+3 point"
        android:id="@+id/a_3point"
        android:onClick="A_3point"
        android:layout_below="@id/a_score"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:background="#FC5C07"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+2 point"
        android:layout_marginTop="16dp"
        android:onClick="A_2point"
        android:id="@+id/a_2point"
        android:layout_below="@id/a_3point"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:background="#FC5C07"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+1 point"
        android:id="@+id/a_1point"
        android:layout_marginTop="16dp"
        android:layout_below="@id/a_2point"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:onClick="A_1point"
        android:background="#FC5C07"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="-1 point"
        android:id="@+id/a_minus1point"
        android:layout_marginTop="16dp"
        android:layout_below="@id/a_1point"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:onClick="A_minus1point"
        android:background="#FC5C07"/>

    <View
        android:layout_width="1dp"
        android:layout_height="360dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+3 point"
        android:id="@+id/b_3point"
        android:layout_below="@id/b_score"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:onClick="B_3point"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:background="#FC5C07"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+2 point"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:id="@+id/b_2point"
        android:onClick="B_2point"
        android:layout_below="@id/b_3point"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:background="#FC5C07"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="+1 point"
        android:onClick="B_1point"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:id="@+id/b_1point"
        android:layout_marginTop="16dp"
        android:layout_below="@id/b_2point"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:background="#FC5C07"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="-1 point"
        android:id="@+id/b_minus1point"
        android:layout_marginTop="16dp"
        android:layout_below="@id/b_1point"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:onClick="B_minus1point"
        android:background="#FC5C07"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#FC5C07"
        android:onClick="Game"
        android:id="@+id/game"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#030303"
        android:background="#0704F7"
        android:id="@+id/game_text_view"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#FC5C07"
        android:onClick="Reset"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>
</RelativeLayout>